[Unit]
Description=raspi-ai python bot
After=network-online.target sound.target

[Service]
Type=simple
User=deploy
Group=audio
SupplementaryGroups=tty
WorkingDirectory=/opt/raspi-ai/app
ExecStart=/opt/raspi-ai/app/run.sh
Restart=always
RestartSec=5
StandardOutput=journal
StandardError=journal
Environment=PYTHONUNBUFFERED=1
Environment=RASPI_AI_MEDIA_TEST=0

[Install]
WantedBy=multi-user.target
